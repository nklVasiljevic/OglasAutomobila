@using Microsoft.AspNetCore.Identity
@using OglasAutomobila.Data
@inject SignInManager<AspNetUser> SignInManager
@inject UserManager<AspNetUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Oglasi", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.RouteUrl(new { action = "Register", controller = "Account" })">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.RouteUrl(new { action = "Login", controller = "Account" })">Login</a>
        </li>
    }
</ul>
