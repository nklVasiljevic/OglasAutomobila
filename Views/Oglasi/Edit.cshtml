@model OglasAutomobila.Data.Oglasi

@{ 
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Oglasi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Oglas</h4>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(o => o.OglasiId)
    <div class="form-group">
        @Html.LabelFor(o => o.Naziv, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(o => o.Naziv)
            @Html.ValidationMessageFor(o => o.Naziv)

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Model, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(o => o.Model)
            @Html.ValidationMessageFor(o => o.Model)

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Marka, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(o => o.Marka)
            @Html.ValidationMessageFor(o => o.Marka)

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(o => o.Opis, new { @class = "control-lable col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(o => o.Opis)
            @Html.ValidationMessageFor(o => o.Opis)

        </div>
    </div>
    <div class="form-group">
        <label class="col-form-label">Dodajte sliku</label>
        <input type="file" asp-for="Image.ImageFile" value="Dodajte sliku" class="btn btn-outline-secondary" style="font-size: 12px; width: 25%">
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Save" class="btn btn-default" />
        </div>

    </div>
</div>
            }